<h1>LAPTOPS</h1>

<table>
  <tr>
    <th>Manufacturer</th>
    <th>Model</th>
  </tr>
 
  <% @laptops.each do |laptop| %>
    <tr>
      <td><%= laptop.manufacturer %></td>
      <td><%= laptop.model %></td>
      <td><%= link_to 'Show', laptop_path(laptop) %></td>
      <td><%= link_to 'Edit', edit_laptop_path(laptop)%></td>
      <td><%= link_to 'Destroy', laptop_path(laptop),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add New Laptop', new_laptop_path %>